{
  "buildCommand": "pip install -r requirements.txt && cd backend && python manage.py collectstatic --noinput",
  "outputDirectory": ".",
  "framework": "django",
  "python": {
    "version": "3.11"
  },
  "env": {
    "PYTHONUNBUFFERED": "1",
    "DEBUG": "False"
  },
  "functions": {
    "api/index.py": {
      "runtime": "python3.11",
      "maxDuration": 30,
      "memory": 1024,
      "includeFiles": "backend/**"
    }
  },
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/backend/staticfiles/$1",
      "headers": {
        "cache-control": "public, max-age=3600"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ]
}
